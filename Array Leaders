class Solution {
    // Function to find the leaders in the array.
  public:
    vector<int> leaders(vector<int>& arr) {
        vector<int> output;
        int max = arr[arr.size()-1];
        for(int i=arr.size()-1 ; i>=0; i--)
        {
            if(arr[i] >= max)
            {
                output.push_back(arr[i]);
                max = arr[i];
            }
        }
        reverse(output.begin(),output.end());
        return output;
    }
};
