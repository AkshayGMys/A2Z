//I easily knew how to solve it lol

class Solution {
public:
    TreeNode* insertIntoBST(TreeNode* root, int val) 
    {
        
        TreeNode* newNode = new TreeNode(val);
        if(root == nullptr) return newNode;
        TreeNode* curr = root;
        TreeNode* prev = root;
        while(curr)
        {
            prev = curr;
            if(curr->val > val)
            {
                curr = curr->left;
            }
            else
            {
                curr = curr->right;
            }
        }
        if(prev->val > val)
            prev->left = newNode;
        else
            prev->right = newNode;
        return root;
    }
};
