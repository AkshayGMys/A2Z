This was a easy question i messed it up 

class Solution {
public:
    int maxScore(vector<int>& cardPoints, int k) 
    {
        int j = cardPoints.size()-1;
        int sum = 0;
        for(int i = 0;i<=k-1 ; i++)
            sum+=cardPoints[i]; 
        int maxSum = sum;
        for(int i=k-1;i>=0;i--)
        {
            sum += cardPoints[j--] - cardPoints[i];
            maxSum = max(sum , maxSum);
        }
        return maxSum;
    }
};
