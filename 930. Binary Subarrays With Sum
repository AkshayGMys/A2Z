class Solution {
public:
    int numSubarraysWithSum(vector<int>& nums, int goal) {
            unordered_map<int ,int > umap;
            umap[0] = 1;
            int sum = 0 ;
            int result = 0;
            for(auto it: nums)
            {
                sum+=it;
                if(umap.find(sum - goal) != umap.end()) result+= umap[sum - goal];
                umap[sum]++;
            } 
            return result;
        }
    };
