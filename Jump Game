//Literally easiest solution i have ever written for a medium lol
//At every hop just check the current hops left with the hops given at persent i 


class Solution {
public:
    bool canJump(vector<int>& nums) 
    {
        int hops = 0;
        for(int i = 0 ; i<nums.size() ; i++)
        {
            if(nums[i] > hops)
                hops = nums[i];
            if(hops<=0 && i!= nums.size()-1)
                return false;
            hops--;
        }
        return true;
    }
};
