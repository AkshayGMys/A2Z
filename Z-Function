//Just understand substr() method in the strings .The methods and how a string object is made is very very important when solving the string questions .



class Solution {
public:
    int strStr(string haystack, string needle) 
    {
        if(haystack.size() < needle.size())
            return -1;
        for(int i = 0;i<=haystack.size() - needle.size() ;i++)
        {
            if(haystack.substr(i,needle.size()) == needle)
                return i;
        }
        return -1;
        
    }
};
