#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    int networkDelayTime(vector<vector<int>>& times, int n, int k) {
        // convert to 0-based
        int src = k - 1;
        vector<vector<pair<int,int>>> adj(n);
        for (auto &e : times) {
            int u = e[0] - 1, v = e[1] - 1, w = e[2];
            adj[u].push_back({v, w});
        }

        const int INF = 1e9;
        vector<int> dist(n, INF);
        dist[src] = 0;

        // min-heap of (distance, node)
        priority_queue<
            pair<int,int>,
            vector<pair<int,int>>,
            greater<pair<int,int>>
        > pq;
        pq.push({0, src});

        while (!pq.empty()) {
            auto [d, u] = pq.top();
            pq.pop();
            //This part is important as there can be multiple entries for the same 
            if (d != dist[u]) continue;         

            for (auto [v, w] : adj[u]) {
                int nd = d + w;
                if (nd < dist[v]) {
                    dist[v] = nd;
                    pq.push({nd, v});
                }
            }
        }

        int ans = *max_element(dist.begin(), dist.end());
        return (ans >= INF) ? -1 : ans;
    }
};
