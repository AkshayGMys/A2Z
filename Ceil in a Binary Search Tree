class Solution {
  public:
    int findCeil(Node* root, int x) {
        
        if(!root) return -1;
        int res = -1;
        while(root)
        {
            if(root->data == x)
                return x;
            else if(root->data > x)
            {
                res = root->data;
                root = root->left;
            }
            else
                root = root->right;
        }
        return res;
    }
};
